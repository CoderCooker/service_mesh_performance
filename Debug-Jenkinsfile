pipeline {
    agent any
    stages {

        stage('Test On kind-deployment-Slave1') {
            agent {
                label "kind-deployment-Slave1"
            }
            steps {
                sh "echo 'hello from kind-deployment-Slave1'"
                sh 'hostname'
                sh 'free -mh'
                sh 'df -mh'
                sh 'pwd'
            }
        }

        stage('Test On aws-slave-21') {
            agent {
                label "aws-slave-21"
            }
            steps {
                sh "echo 'hello from aws-slave-21'"
                sh 'hostname'
                sh 'free -mh'
                sh 'df -mh'
                sh 'pwd'
            }
        }
    }
}
